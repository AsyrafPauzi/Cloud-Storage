   <body class="c-login-wrapper">
        <div class="c-login">
            <header class="c-login__head">
                <a class="c-login__brand" href="login.html#!">
                    <%= image_tag "logo-login.svg" %>
                </a>
                <h1 class="c-login__title">Welcome back! Please login.</h1>
            </header>
            
            <form class="c-login__content">
                <div class="c-field u-mb-small">
                    <label class="c-field__label" for="input1">Sign in with your e-mail address</label> 
                    <input class="c-input" type="email" id="input1" placeholder="clark@dashboard.com"> 
                </div>

                <div class="c-field u-mb-small">
                    <label class="c-field__label" for="input2">Password</label> 
                    <input class="c-input" type="password" id="input2" placeholder="Numbers, Letters..."> 
                </div>

                <button class="c-btn c-btn--info c-btn--fullwidth" type="submit">Sign in to Dashboard</button>

            </form>

            <footer class="c-login__footer">
              <center>
                Donâ€™t have an account yet? <%= link_to "Get Started", new_user_registration_path %>
              </center>
            </footer>
        </div>
    </body>